
.paly-view {
    display: block;
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.blur {
    -webkit-filter: blur(40px);
}
.bg {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-size: cover;
    background-position: bottom center;
}
.main-box {
    position: absolute;
    top: 0;
    bottom: 154px;
    z-index: 3;
    width: 100%;
    background: rgba(0,0,0,.2);
}

.song-info {
    width: 100%;
    padding: 15px;
    box-sizing: border-box;
    text-align: center;
}

.song-title {
    display: block;
    width: 100%;
    color: #fff;
    font-size: 18px;
    line-height: 30px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.song-subtitle {
    display: block;
    width: 100%;
    font-size: 14px;
    line-height: 20px;
    color: rgba(255,255,255, .6);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.slider-box {
    position: relative;
    display: block;
    box-sizing: border-box;
    padding: 10px 65px;
    width: 100%;
}
.slider-text {
    position: absolute;
    display: block;
    width: 50px;
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    color: #fff;
}
.st-l {
    left: 15px;
}
.st-r {
    top: 10px;
    right: 15px;
    text-align: right;
}

.slider {
    position: relative;
    margin-top: 8px;
    width: 100%;
    height: 3px;
    background: rgba(255,255,255,.3);
}
.slider-inner {
    display: block;
    height: 3px;
    background: #fff;
}

.slider-btn {
    position: absolute;
    top: 0;
    margin-top: -4px;
    display: block;
    width: 10px;
    height: 10px;
    background: #fff;
    border-radius: 50%;
}


.cd-info {
    position: relative;
    width: 100%;
    text-align: center;
    padding-top: 60px;
}

.cd-gan {
    position: absolute;
    left: 50%;
    margin-top: -40px;
    margin-left: -75px;
    display: block;
    width: 150px;
    height: 100px;
    background: url('../../resources/images/cd_g.png');
    background-size: cover;
    z-index: 10;
}
.cd-inner {
    position: relative;
    display: inline-block;
    z-index: 4;
    height: 250px;
    width: 250px;
    background: url('../../resources/images/cd_b.png');
    background-size: cover;
    text-align: center;
    padding-top: 50px;
    box-sizing: border-box;
    
}
.cd-animation {
    -webkit-animation:circle 10s infinite linear;
    animation:circle 10s infinite linear;
}
.cd-img {
    display: inline-block;
    width: 150px;
    height: 150px;
    border-radius: 50%;
}

@-webkit-keyframes circle{
    0%{ transform:rotate(0deg); }
    100%{ transform:rotate(360deg); }
}

.ctre-box {
    height: 154px;
    position: absolute;
    bottom: 0;
    z-index: 3;
    width: 100%;
    background: rgba(0,0,0,.2);
}

.music-ctr {
    position: relative;
    box-sizing: border-box;
    padding: 10px 60px;
}

.music-sort {
    position: absolute;
    left: 10px;
    top: 18px;
    display: inline-block;
    width: 54px;
    height: 54px;
}
.ms-loop {
    background: url("../../resources/images/play_icn_loop.png");
    background-size: cover;
}
.ms-one {
    background: url("../../resources/images/play_icn_one.png");
    background-size: cover;
}
.ms-shuffle {
    background: url("../../resources/images/play_icn_shuffle.png");
    background-size: cover;
}

.music-list-btn {
    position: absolute;
    top: 18px;
    right: 10px;
    display: inline-block;
    width: 54px;
    height: 54px;
    background: url("../../resources/images/play_icn_src.png");
    background-size: cover;
