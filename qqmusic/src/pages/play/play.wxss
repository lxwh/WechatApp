.play-list {
    position: absolute;
    top: 20%;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 99;
    background: rgba(255,255,255,.95);
}
.play-list-header {
    position: relative;
    height: 44px;
    line-height: 44px;
    font-size: 16px;
    padding: 0 15px;
    text-align: center;
    box-sizing: border-box;
    border-bottom:1px solid rgba(0, 0,0, .1)
}
.play-list-clear {
    position: absolute;
    right: 15px;
    font-size:14px;
    color: rgba(0 ,0,0,.6);
}

.play-list-bottom {
    position: absolute;
    width: 100%;
    bottom: 0;
    height: 50px;
    line-height: 50px;
    text-align: center;
    font-size: 16px;
    border-top:1px solid rgba(0, 0,0, .1)
}

.play-list-inner {
    position: absolute;
    top: 45px;
    bottom: 51px;
    width: 100%;
    box-sizing: border-box;
    overflow-x: hidden;
    overflow-y: auto;
    padding-left: 10px;
}

.play-item {
    position: relative;
    widows: 100%;
    box-sizing: border-box;
    padding-right: 45px;
    height: 44px;
    line-height: 44px;
    font-size: 15px;
    border-bottom: 1px solid rgba(0, 0,0, .1);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.play-item-sub {
    font-size: 12px;
    color: rgba(0, 0, 0, .6);
}

.play-item-close {
  width: 44px;
  height: 44px;
  position: absolute;
  top: 0;
  right: 10px;
}
.play-item-close::before {
    position: absolute;
    height: 18px;
    width: 1px;
    left: 50%;
    margin-left: -1px;
    top: 50%;
    margin-top: -10px;
    content: "";
    background: rgba(0,0,0,.4);
    -webkit-transform: rotate(45deg);
}
.play-item-close::after {
    width: 18px;
    height: 1px;
    position: absolute;
    left: 50%;
    margin-left: -9px;
    top: 50%;
    margin-top: -1px;
    content: "";
    background: rgba(0,0,0,.4);
    -webkit-transform: rotate(45deg);
}